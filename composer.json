{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "doctrine/doctrine-fixtures-bundle": "^2.3",
        "lexik/jwt-authentication-bundle": "^2.6",
        "nelmio/api-doc-bundle": "^3.3",
        "nelmio/cors-bundle": "^1.5",
        "scienta/doctrine-json-functions": "^4.0",
        "sensio/framework-extra-bundle": "^5.3",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/asset": "4.3.*",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/expression-language": "4.3.*",
        "symfony/filesystem": "4.3.*",
        "symfony/flex": "^1.1",
        "symfony/form": "4.3.*",
        "symfony/framework-bundle": "4.3.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "*",
        "symfony/process": "4.3.*",
        "symfony/security-bundle": "4.3.*",
        "symfony/serializer-pack": "*",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/translation": "4.3.*",
        "symfony/twig-bundle": "4.3.*",
        "symfony/validator": "4.3.*",
        "symfony/web-link": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "symfony/debug-pack": "*",
        "symfony/maker-bundle": "^1.0",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*",
        "symfony/web-server-bundle": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Multi\\": "src/Multi"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "prepare-default": [
            "php bin/console doctrine:database:drop --if-exists --no-interaction --force --quiet",
            "php bin/console doctrine:database:create --if-not-exists --no-interaction --quiet",
            "php bin/console doctrine:schema:create --no-interaction --quiet",
            "php bin/console doctrine:fixtures:load --no-interaction --quiet"
        ],
        "prepare-tenants": [
            "php bin/console doctrine:database:drop --tenant=rmmapi --if-exists --no-interaction --force --quiet",
            "php bin/console doctrine:database:create --tenant=rmmapi --if-not-exists --no-interaction --quiet",
            "php bin/console doctrine:schema:create --tenant=rmmapi --no-interaction --quiet",

            "php bin/console doctrine:database:drop --tenant=rmm --if-exists --no-interaction --force --quiet",
            "php bin/console doctrine:database:create --tenant=rmm --if-not-exists --no-interaction --quiet",
            "php bin/console doctrine:schema:create --tenant=rmm --no-interaction --quiet"
        ],
        "update-tenants": [
            "php bin/console doctrine:schema:update --force --tenant=rmmapi --no-interaction --quiet",
            "php bin/console doctrine:schema:update --force --tenant=rmm --no-interaction --quiet"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
